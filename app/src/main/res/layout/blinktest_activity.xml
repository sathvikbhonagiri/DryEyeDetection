<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    tools:context=".Blinktest">

    <TextureView

        android:id="@+id/textureView"

        android:layout_width="match_parent"

        android:layout_height="match_parent" />

    <ImageView

        android:id="@+id/frame_cutout_image_view"

        android:layout_width="300dp"

        android:layout_height="450dp"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"

        android:layout_marginStart="59dp"

        android:layout_marginEnd="48dp"

        android:scaleType="fitXY"

        android:src="@drawable/frame_cutout" />

    <TextView

        android:id="@+id/blink_count_text_view"

        android:layout_width="203dp"

        android:layout_height="43dp"

        android:layout_below="@+id/frame_cutout_image_view"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"

        android:layout_marginStart="113dp"

        android:layout_marginTop="113dp"

        android:layout_marginEnd="95dp"

        android:layout_marginBottom="125dp"

        android:background="@color/black"

        android:gravity="center"

        android:text="Blink Count: 0"

        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView

        android:id="@+id/timer_text_view"

        android:layout_width="wrap_content"

        android:layout_height="82dp"

        android:layout_below="@+id/frame_cutout_image_view"

        android:layout_alignLeft="@+id/blink_count_text_view"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"

        android:layout_marginStart="117dp"

        android:layout_marginLeft="4dp"

        android:layout_marginTop="20dp"

        android:layout_marginEnd="121dp"

        android:background="@color/black"

        android:gravity="center"

        android:padding="6dp"

        android:text="Time Remaining :"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>
